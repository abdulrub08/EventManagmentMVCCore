@model Equipment

@{
    ViewData["Title"] = "Details";
    // Get the full path of the existing employee photo for display
    var photoPath = "~/UploadedFiles/" + (Model.EquipmentFilePath ?? "noimage.jpg");
}

<h1>Details</h1>

<div>
    <h4>Equipment</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EquipmentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Createdby)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Createdby)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Createdate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Createdate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentCost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EquipmentCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EquipmentFilePath)
        </dt>
        <dd class="col-sm-10">
            <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  Id = Model.EquipmentID  }) |
    <a asp-action="Index">Back to List</a>
</div>
