    ViewData["Title"] = "Delete";
}

<h1>View</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Flower</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlowerName)
        </dd>
        <dt class = "col-sm-2">
